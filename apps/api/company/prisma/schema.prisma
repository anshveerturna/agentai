generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Agent {
  id          String   @id
  companyId   String?
  name        String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime
  userId      String   @db.Uuid
  isPublished Boolean  @default(false)
  isTemplate  Boolean  @default(false)

  @@index([companyId])
  @@index([userId])
}

model Workflow {
  id                                                        String                @id
  name                                                      String
  description                                               String?
  graph                                                     Json
  nodeOverrides                                             Json
  version                                                   Int                   @default(1)
  createdAt                                                 DateTime              @default(now())
  updatedAt                                                 DateTime
  status                                                    String                @default("draft")
  activeVersionId                                           String?               @unique
  defaultBranch                                             String                @default("main")
  WorkflowVersion_Workflow_activeVersionIdToWorkflowVersion WorkflowVersion?      @relation("Workflow_activeVersionIdToWorkflowVersion", fields: [activeVersionId], references: [id])
  WorkflowRun                                               WorkflowRun[]
  WorkflowVersion_WorkflowVersion_workflowIdToWorkflow      WorkflowVersion[]     @relation("WorkflowVersion_workflowIdToWorkflow")
  WorkflowWorkingState                                      WorkflowWorkingState?

  @@index([updatedAt])
}

model WorkflowRun {
  id         String   @id
  workflowId String
  status     String
  input      Json?
  result     Json?
  createdAt  DateTime @default(now())
  Workflow   Workflow @relation(fields: [workflowId], references: [id], onDelete: Cascade)

  @@index([createdAt])
  @@index([workflowId])
}

model WorkflowVersion {
  id                                                 String    @id
  workflowId                                         String
  label                                              String?
  name                                               String
  description                                        String?
  graph                                              Json
  createdAt                                          DateTime  @default(now())
  branch                                             String    @default("main")
  diffSummary                                        String?
  semanticHash                                       String?
  versionNumber                                      Int?
  Workflow_Workflow_activeVersionIdToWorkflowVersion Workflow? @relation("Workflow_activeVersionIdToWorkflowVersion")
  Workflow_WorkflowVersion_workflowIdToWorkflow      Workflow  @relation("WorkflowVersion_workflowIdToWorkflow", fields: [workflowId], references: [id], onDelete: Cascade)

  @@index([createdAt])
  @@index([workflowId])
  @@index([workflowId, versionNumber])
}

model WorkflowWorkingState {
  workflowId String   @id
  graph      Json
  layoutHash String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime
  Workflow   Workflow @relation(fields: [workflowId], references: [id], onDelete: Cascade)
}
