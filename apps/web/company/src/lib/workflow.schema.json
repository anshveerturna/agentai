{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://agentai.local/schemas/workflow.schema.json",
  "title": "ExecutionSpec",
  "type": "object",
  "required": ["id", "name", "nodes", "flow"],
  "additionalProperties": false,
  "properties": {
    "id": { "type": "string", "minLength": 1 },
    "name": { "type": "string", "minLength": 1 },
    "version": { "type": "integer", "minimum": 1 },
    "nodes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "type"],
        "additionalProperties": true,
        "properties": {
          "id": { "type": "string", "minLength": 1 },
          "type": { "type": "string", "minLength": 1 },
          "label": { "type": "string" },
          "config": { "type": ["object", "array", "null"] }
        }
      }
    },
    "flow": {
      "type": "array",
      "minItems": 0,
      "items": {
        "type": "object",
        "required": ["from", "to", "kind"],
        "additionalProperties": true,
        "properties": {
          "from": { "type": "string", "minLength": 1 },
          "to": { "type": "string", "minLength": 1 },
          "kind": { "type": "string", "enum": ["control", "data", "error"] },
          "label": { "type": "string" },
          "branch": { "type": "string" },
          "schema": { "type": "string" }
        },
        "allOf": [
          {
            "if": { "properties": { "kind": { "const": "data" } }, "required": ["kind"] },
            "then": { "required": ["schema"] }
          }
        ]
      }
    },
    "layout": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "positions": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "required": ["x", "y"],
            "additionalProperties": false,
            "properties": {
              "x": { "type": "number" },
              "y": { "type": "number" }
            }
          }
        }
      }
    }
  }
}
